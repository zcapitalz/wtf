client

tls-client
auth SHA256
cipher AES-256-CBC
remote-cert-tls server
tls-version-min 1.2

proto {{ openvpn_protocol }}
remote {{ ansible_default_ipv4.address }} {{ openvpn_port }}
dev tun

resolv-retry 5
nobind
keepalive 5 30
auth-nocache
persist-key
persist-tun
verb 3

route-method exe
route-delay 2

key-direction 1
<ca>
{{ ca_cert }}
</ca>

<tls-auth>
{{ tls_key }}
</tls-auth>

<cert>
{{ client_cert }}
</cert>

<key>
{{ client_key }}
</key>

